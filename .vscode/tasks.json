{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "watch",
            "dependsOn": ["npm: watch:build"],
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "npm",
            "script": "watch:build",
            "group": "build",
            "problemMatcher": ["$esbuild-watch", "$tsc"],
            "isBackground": true,
            "label": "npm: watch:build",
            "presentation": {
                "group": "watch",
                "reveal": "never"
            }
        },
        {
            "type": "npm",
            "script": "watch:typecheck",
            "group": "build",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "label": "npm: watch:typecheck",
            "presentation": {
                "group": "watch",
                "reveal": "never"
            }
        },
        {
            "type": "npm",
            "script": "watch-tests",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "never",
                "group": "watchers"
            },
            "group": "build"
        },
        {
            "label": "tasks: watch-tests",
            "dependsOn": ["npm: watch", "npm: watch-tests"],
            "problemMatcher": []
        }
    ]
}
