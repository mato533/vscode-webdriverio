{
    "name": "wdio-vscode",
    "displayName": "WebDriverIO",
    "description": "wdio for vscode",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.98.0"
    },
    "categories": [
        "Testing",
        "Other"
    ],
    "activationEvents": [
        "onLanguage:javascript",
        "onLanguage:typescript",
        "workspaceContains:**/wdio.conf.js",
        "workspaceContains:**/wdio.conf.ts"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "webdriverio-runner.runTest",
                "title": "WebDriverIO: Run Test"
            },
            {
                "command": "webdriverio-runner.runSpec",
                "title": "WebDriverIO: Run Spec File"
            },
            {
                "command": "webdriverio-runner.runAllTests",
                "title": "WebDriverIO: Run All Tests"
            },
            {
                "command": "webdriverio-runner.configureTests",
                "title": "WebDriverIO: Configure Tests"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "resourceExtname == .js || resourceExtname == .ts",
                    "command": "webdriverio-runner.runTest",
                    "group": "webdriverio"
                },
                {
                    "when": "resourceExtname == .js || resourceExtname == .ts",
                    "command": "webdriverio-runner.runSpec",
                    "group": "webdriverio"
                }
            ],
            "explorer/context": [
                {
                    "when": "resourceExtname == .js || resourceExtname == .ts",
                    "command": "webdriverio-runner.runSpec",
                    "group": "webdriverio"
                }
            ],
            "testing/item/context": [
                {
                    "command": "webdriverio-runner.runAllTests",
                    "when": "controllerId == 'vitest'"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "webdriverio-explorer",
                    "title": "WebDriverIO Explorer",
                    "icon": "media/icon.svg"
                }
            ]
        },
        "configuration": {
            "title": "WebDriverIO Runner",
            "properties": {
                "webdriverio-runner.configPath": {
                    "type": "string",
                    "default": "wdio.conf.js",
                    "description": "Path to WebDriverIO configuration file"
                },
                "webdriverio-runner.showOutput": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show WebDriverIO output in terminal"
                },
                "webdriverio-runner.testFilePattern": {
                    "type": "string",
                    "default": "**/*.spec.js,**/*.test.js,**/*.spec.ts,**/*.test.ts",
                    "description": "Glob pattern for test files"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "pnpm run package",
        "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
        "watch": "npm-run-all -p watch:*",
        "watch:esbuild": "node esbuild.js --watch",
        "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
        "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
        "check-types": "tsc --noEmit",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@babel/types": "^7.27.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "20.x",
        "@types/vscode": "^1.98.0",
        "@types/which": "^3.0.4",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "@wdio/eslint": "^0.1.1",
        "esbuild": "^0.25.1",
        "eslint": "^9.23.0",
        "glob": "^11.0.1",
        "husky": "^9.1.7",
        "lint-staged": "^15.5.0",
        "mocha": "^11.1.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.5.3",
        "typescript": "^5.8.2"
    },
    "dependencies": {
        "@babel/parser": "^7.27.0",
        "@wdio/cli": "^9.12.4",
        "recast": "^0.23.11",
        "which": "^5.0.0"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "edgedriver",
            "geckodriver"
        ]
    },
    "lint-staged": {
        "**/*.{yml,json,md,ts,js}": [
            "prettier --write --cache ."
        ],
        "**/*.{cts,mts,cjs,mjs,ts,js}": [
            "eslint --fix --cache --cache-location node_modules/.cache/eslint/ ."
        ]
    }
}
